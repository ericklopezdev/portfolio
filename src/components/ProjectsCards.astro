---
import { getCollection } from "astro:content";
import LinuxWindow from './LinuxWindow.astro';

const projects = await getCollection("projects");
// TODO there is a overflow witht the cards of projects
---

<div class="projects-grid">
  {projects.map(project => {
    const content = (
       <>
         {project.data.image && <img src={project.data.image} alt={project.data.title} />}
        <div class="card-content">
           <div class="card-header">
             <p class="date">{project.data.date.toLocaleDateString()}</p>
             <div class="project-buttons">
               <a href={`/projects/${project.slug}`}>See More</a>
               {project.data.github && <> - <a href={project.data.github} target="_blank">GitHub</a></>}
               {project.data.demo && <> - <a href={project.data.demo} target="_blank">Demo</a></>}
             </div>
           </div>
           <p>{project.data.description}</p>
           <div class="tags">
             {project.data.tags?.map(tag => <span class="tag">#{tag}</span>)}
           </div>
         </div>
      </>
    );
    return (
      <LinuxWindow title={project.data.title}>
        {content}
      </LinuxWindow>
    );
  })}
</div>

<style>
  .projects-grid {
    font-size: 0.8rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    max-width: 100%;
  }


    .tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin: 1rem 0;
    }

  img {
     width: 100%;
     max-height: 200px;
     object-fit: cover;
     border-radius: 4px;
  }

  .project-card h3 {
    color: var(--yellow);
    margin: 0 0 0.5rem 0;
  }

  .project-card p {
    color: var(--fg-dim);
    margin: 0 0 0.5rem 0;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .date {
    font-size: 0.8rem;
    color: var(--fg-dim);
  }

  .project-buttons {
    font-size: 0.8rem;
  }

  .tags {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

    .tag {
      background: var(--bg-soft);
      color: var(--yellow);
      padding: 0.2rem 0.5rem;
      border-radius: 16px;
      font-size: 0.8rem;
      white-space: nowrap;
      border: 1px solid var(--yellow);
      font-weight: bold;
    }

    .terminal .ankor:hover {
      color: var(--yellow);
      background: var(--bg-hover);
      border-color: var(--yellow);
    }
</style>
