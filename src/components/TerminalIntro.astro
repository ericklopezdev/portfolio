<script>
  console.log("TerminalIntro script running");
  const outputSpan = document.getElementById("output-text");
  console.log("outputSpan:", outputSpan);
  const fullText = outputSpan ? outputSpan.innerHTML : '';
  if (outputSpan && !localStorage.getItem("introAnimated")) {
    console.log("Starting animation");
    outputSpan.innerHTML = "";
    let index = 0;
    const typeWriter = () => {
      if (index < fullText.length) {
        outputSpan.innerHTML = fullText.slice(0, index + 1);
        index++;
        const delay = 10; // Constant speed for all characters
        setTimeout(typeWriter, delay);
      } else {
        localStorage.setItem("introAnimated", "true");
        console.log("Animation complete");
      }
    };
    setTimeout(typeWriter, 500);
  }
  // Start cursor blinking immediately
  const cursor = document.querySelector('.cursor') as HTMLElement;
  if (cursor) {
    console.log("Starting cursor blink");
    cursor.style.animation = 'blink 1s infinite';
  }
</script>
