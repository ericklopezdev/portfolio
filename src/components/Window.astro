---
// Window.astro - Windows XP style window component
export interface Props {
  title: string;
  children: any;
}

const { title, children } = Astro.props;
---

<div class="window">
  <div class="window-title-bar">
    <span class="title-text">{title}</span>
    <div class="window-buttons">
      <span class="minimize">_</span>
      <span class="maximize">□</span>
      <span class="close">×</span>
    </div>
  </div>
  <div class="window-content">
    <slot>{children}</slot>
  </div>
</div>

<style>
   .window {
     background: #c0c0c0;
     border: 2px outset #c0c0c0;
     border-radius: 0;
     box-shadow: inset 2px 2px 0 #ffffff, inset -2px -2px 0 #808080, 2px 2px 4px rgba(0,0,0,0.3);
     font-family: 'Iosevka', monospace;
     overflow: hidden;
     max-width: 600px;
     margin: 1rem auto;
   }

  .window-title-bar {
    background: #000080;
    color: white;
    padding: 3px 6px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    font-weight: bold;
  }

  .title-text {
    flex: 1;
    text-shadow: 1px 1px 0 rgba(0,0,0,0.5);
  }

  .window-buttons {
    display: flex;
    gap: 2px;
  }

  .window-buttons span {
    width: 16px;
    height: 14px;
    background: linear-gradient(to bottom, #d4d0c8, #c0c0c0);
    border: 1px outset #c0c0c0;
    border-top-color: #ffffff;
    border-left-color: #ffffff;
    border-right-color: #808080;
    border-bottom-color: #808080;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    cursor: pointer;
    position: relative;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.5);
  }

  .window-buttons span:active {
    border: 1px inset #c0c0c0;
    border-top-color: #808080;
    border-left-color: #808080;
    border-right-color: #ffffff;
    border-bottom-color: #ffffff;
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.3);
  }

  .minimize {
    background: linear-gradient(to bottom, #d4d0c8, #c0c0c0);
  }

  .minimize:hover {
    background: linear-gradient(to bottom, #e0e0e0, #d0d0d0);
  }

  .maximize {
    background: linear-gradient(to bottom, #d4d0c8, #c0c0c0);
  }

  .maximize:hover {
    background: linear-gradient(to bottom, #e0e0e0, #d0d0d0);
  }

  .close {
    background: linear-gradient(to bottom, #d4d0c8, #c0c0c0);
  }

  .close:hover {
    background: linear-gradient(to bottom, #ff6b6b, #ff0000);
    color: white;
  }

  .window-content {
    padding: 8px;
    background: #c0c0c0;
    border: 1px inset #c0c0c0;
    border-top: 0;
    min-height: 200px;
  }

   /* Linux Terminal Styles */
   .terminal {
     background: var(--bg);
     border: 1px solid var(--border);
     border-radius: 8px;
     font-family: 'Iosevka', monospace;
     box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
     max-width: 600px;
     margin: 1rem auto;
     min-height: 400px;
     overflow: visible;
   }

  .terminal-header {
    background: var(--bg-soft);
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    border-radius: 8px 8px 0 0;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 8px;
    display: inline-block;
  }

  .terminal .red { background: #ff5f57; }
  .terminal .yellow { background: #ffbd2e; }
  .terminal .green { background: #28ca42; }

  .terminal-title {
    flex: 1;
    text-align: center;
    color: var(--fg);
    font-size: 0.9rem;
  }

  .terminal-body {
    padding: 1rem;
    color: var(--fg);
  }
</style>