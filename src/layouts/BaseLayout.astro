---
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/gruvbox.css';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

  </head>
    <body>
        <ThemeToggle />
       <main class="container">
         <slot />
       </main>
    </body>
</html>

<style>
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
      background: var(--bg);
      z-index: 100;
    }

   nav {
     display: flex;
     gap: 1rem;
   }

   nav a {
     color: var(--fg);
     text-decoration: none;
     padding: 0.5rem;
     border-radius: 4px;
     transition: all 0.2s;
     position: relative;
   }

   nav a.active::after {
     content: '';
     position: absolute;
     bottom: -4px;
     left: 50%;
     transform: translateX(-50%);
     width: 80%;
     height: 3px;
     box-shadow: 0 2px 0 var(--fg);
   }

   nav a:hover {
     background: var(--bg-soft);
   }

      .container {
        max-width: 1220px;
        margin: 0rem auto 0;
        padding: 0 2rem;
      }



   @keyframes fadeIn {
     from { opacity: 0; transform: translateY(20px); }
     to { opacity: 1; transform: translateY(0); }
   }
</style>
