---
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/gruvbox.css';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

  </head>
  <body>
     <header>
       <nav>
         <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a>
         <a href="/experience" class={Astro.url.pathname === '/experience' ? 'active' : ''}>Experience</a>
         <a href="/projects" class={Astro.url.pathname === '/projects' || Astro.url.pathname.startsWith('/projects/') ? 'active' : ''}>Projects</a>
         <a href="/certifications" class={Astro.url.pathname === '/certifications' ? 'active' : ''}>Certifications</a>
       </nav>
       <ThemeToggle />
     </header>
     <main class="container">
       <slot />
     </main>
  </body>
</html>

<style>
   header {
     position: fixed;
     top: 0;
     left: 0;
     right: 0;
     display: flex;
     justify-content: center;
     align-items: center;
     padding: 1rem;
     background: var(--bg);
     border-bottom: 1px solid var(--border);
     z-index: 100;
   }

   nav {
     display: flex;
     gap: 1rem;
   }

   nav a {
     color: var(--fg);
     text-decoration: none;
     padding: 0.5rem;
     border-radius: 4px;
     transition: all 0.2s;
     position: relative;
   }

   nav a.active::after {
     content: '';
     position: absolute;
     bottom: -4px;
     left: 50%;
     transform: translateX(-50%);
     width: 80%;
     height: 3px;
     box-shadow: 0 2px 0 var(--fg);
   }

   nav a:hover {
     background: var(--bg-soft);
   }

   .container {
     max-width: 850px;
     margin: 6rem auto 4rem;
     padding: 0 1rem;
     animation: fadeIn 0.5s;
   }

   @keyframes fadeIn {
     from { opacity: 0; transform: translateY(20px); }
     to { opacity: 1; transform: translateY(0); }
   }
</style>
